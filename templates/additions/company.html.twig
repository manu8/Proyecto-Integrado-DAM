{% extends 'layout.html.twig' %}

{% block breadcrumbs %}
  <li><a href="{{ path('home') }}"><i class="fi-home small-icon"></i></a></li>
  <li class="current">
    <i class="fi-plus small-icon"></i>
    {% if company_students_list is defined %}
      <i class="fi-torso small-icon"></i>
    {% endif %}
  </li>
{% endblock %}

{% block content %}
  {% if company_categories_list is defined %}
    <h2>Añadir actividad</h2>
    <p class="lead">Selecciona la actividad(es) a las que se dedica la empresa</p>
    {% include 'lists/categories.html.twig' %}
  {% else %}
    <h2>Añadir alumno</h2>
    <p class="lead">Selecciona el alumno(s) que quieres asociar a la empresa</p>
    {% include 'lists/students.html.twig' %}
  {% endif %}
{% endblock %}

{% block scripts %}
  {{ parent() }}
  <script src="{{ asset('js/companies.js') }}"></script>
  {% if company_students_list is defined %}
    <script src="{{ asset('js/students.js') }}"></script>
  {% endif %}
{% endblock %}